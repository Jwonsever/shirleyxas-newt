      jarPath: "javascript/jmol-13-0",
      jarFile: "JmolAppletSigned.jar",
      isSigned: true,
      script: ""
      };
      
      var mainJme = "mainJme";
      var JMEInfo = {
      jarPath: "javascript/",
      jarFile: "JME.jar"
      };
      
      Jmol.setGrabberOptions(
      [["$", "NCI(small molecules)"],
      [":", "PubChem(small molecules)"],
      ["=", "RCSB(macromolecules)"]]);

